# Make file for school executable
CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

%.o: %.c
	$(CC) $(CGLAGS) -c $< -o $@

clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)

fclean: oclean  clean

re: fclean all
